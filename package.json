        "typescript": "~5.9.3",
        "vite": "^7.3.1",
        "vite-plugin-environment": "^1.1.3"
    },
    "scripts": {
        "build": "pnpm run /^build:/",
        "build:client": "vite build",
        "build:server": "tsup --config tsup.config.ts",
        "test": "jest --coverage --no-cache --verbose",
        "test:client": "jest --selectProjects browser --no-cache --verbose",
        "test:server": "jest --selectProjects node --no-cache --verbose",
        "test:silent": "jest --silent",
        "check": "pnpm run /^check:/",
        "check:types": "pnpm run /^check:types:/",
        "check:types:client": "tsc --noEmit --project src/main/resources/assets/tsconfig.json",
        "check:types:server": "tsc --noEmit",
        "check:lint": "pnpm run /^check:lint:/",
        "check:lint:client": "eslint --cache src/main/resources/assets/",
        "check:lint:server": "eslint --cache --ignore-pattern 'src/main/resources/assets/' .",
        "fix": "pnpm run /^fix:/",
        "fix:client": "eslint --cache --fix --color src/main/resources/assets/",
        "fix:server": "eslint --cache --ignore-pattern 'src/main/resources/assets/' . --fix --color",
        "format": "prettier . --write --log-level warn",
        "format:check": "prettier . --check",
        "watch": "pnpm run /^watch:/",
        "watch:server": "npm run build:server -- --watch"
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "engines": {
        "node": ">= 20.10.0",
        "pnpm": ">= 9.0.0"
    }
}
