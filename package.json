    "license": "Apache-2.0",
    "private": true,
    "type": "module",
    "bugs": {
        "url": "https://github.com/enonic/app-ai-translator/issues"
    },
    "contributors": [
        "Mikita Taukachou <edloidas@gmail.com>"
    ],
    "homepage": "https://github.com/enonic/app-ai-translator",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/enonic/app-ai-translator"
    },
    "dependencies": {
        "lodash.debounce": "^4.0.8",
        "lodash.merge": "^4.6.2",
        "nanoid": "^5.0.7",
        "nanostores": "^0.11.3"
    },
    "devDependencies": {
        "@enonic-types/core": "^7.14.4",
        "@enonic-types/global": "^7.14.4",
        "@enonic-types/lib-admin": "^7.14.4",
        "@enonic-types/lib-auth": "^7.14.4",
        "@enonic-types/lib-common": "^7.14.4",
        "@enonic-types/lib-context": "^7.14.4",
        "@enonic-types/lib-event": "^7.14.4",
        "@enonic-types/lib-i18n": "^7.14.4",
        "@enonic-types/lib-node": "^7.14.4",
        "@enonic-types/lib-repo": "^7.14.4",
        "@enonic-types/lib-scheduler": "^7.14.4",
        "@enonic/esbuild-plugin-copy-with-hash": "^0.2.0",
        "@enonic/eslint-config": "^1.2.1",
        "@swc/core": "^1.7.26",
        "@google/generative-ai": "^0.19.0",
        "@trivago/prettier-plugin-sort-imports": "^4.3.0",
        "@types/jest": "^29.5.13",
        "@types/lodash.clonedeep": "^4.5.9",
        "@types/lodash.debounce": "^4.0.9",
        "@types/lodash.merge": "^4.6.9",
        "@typescript-eslint/eslint-plugin": "^7.18.0",
        "@typescript-eslint/parser": "^7.18.0",
        "eslint": "^8.57.0",
        "eslint-import-resolver-typescript": "^3.6.3",
        "eslint-plugin-import": "^2.30.0",
        "glob": "^11.0.0",
        "jest": "^29.7.0",
        "jest-environment-jsdom": "^29.7.0",
        "lodash.clonedeep": "^4.5.0",
        "prettier": "^3.3.3",
        "rimraf": "^6.0.1",
        "ts-jest": "^29.2.5",
        "tsup": "^8.3.0",
        "typescript": "~5.5.4",
        "vite": "^5.4.6",
        "vite-plugin-environment": "^1.1.3"
    },
    "scripts": {
        "clean": "rimraf build",
        "build": "pnpm run /^build:/",
        "build:client": "vite build",
        "build:server": "tsup --config tsup.config.ts",
        "test": "jest --coverage --no-cache --verbose",
        "test:client": "jest --selectProjects browser --no-cache --verbose",
        "test:server": "jest --selectProjects node --no-cache --verbose",
        "test:silent": "jest --silent",
        "check": "pnpm run /^check:/",
        "check:types": "pnpm run /^check:types:/",
        "check:types:client": "tsc --noEmit --project src/main/resources/assets/tsconfig.json",
        "check:types:server": "tsc --noEmit",
        "check:lint": "pnpm run /^check:lint:/",
        "check:lint:client": "eslint --cache --config src/main/resources/assets/.eslintrc.cjs src/main/resources/assets/",
        "check:lint:server": "eslint --cache .",
        "fix": "pnpm run /^fix:/",
        "fix:client": "eslint --cache --fix --color --config src/main/resources/assets/.eslintrc.cjs src/main/resources/assets/",
        "fix:server": "eslint --cache . --fix --color",
        "format": "prettier . --write --log-level warn",
        "format:check": "prettier . --check",
        "watch": "pnpm run /^watch:/",
        "watch:server": "npm run build:server -- --watch"
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "engines": {
        "node": ">= 20.10.0",
        "pnpm": ">= 8.6.10"
    }
}
