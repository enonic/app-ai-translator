{
    "compilerOptions": {
        "allowUmdGlobalAccess": true,
        "baseUrl": "./",
        "moduleResolution": "node",
        "lib": ["esnext"],
        "paths": {
            "/lib/http-client": ["src/main/resources/types/lib/httpClient"],
            "/lib/cron": ["src/main/resources/types/lib/cron"],
            "/lib/license": ["src/main/resources/types/lib/license"],
            "/lib/xp/core": ["node_modules/@enonic-types/core"],
            "/lib/xp/*": ["node_modules/@enonic-types/lib-*"],
            "/tests/testUtils/*": ["tests/testUtils/*"],
        },
        "typeRoots": [
            "./node_modules/@types",
            "./node_modules/@enonic-types",
            "./src/main/resources/types",
            "./src/main/resources/types/beans",
            "./src/main/resources/types/lib",
        ],
        "types": ["global", "jest"],
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "target": "ESNext",
        "skipLibCheck": true,
        "strict": true,
    },
    "exclude": ["src/main/resources/assets/**/*.*", "src/main/resources/static/**/*.*"],
    "include": [
        "node_modules/typescript/lib/lib.es5.d.ts",
        "src/main/resources/**/*.ts",
        "tests/**/*.ts",
        "tsup.config.ts",
    ],
}
